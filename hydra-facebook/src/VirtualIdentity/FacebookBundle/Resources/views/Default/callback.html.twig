{% extends 'VirtualIdentityFacebookBundle::base.html.twig' %}

{% block title %} authorization{% endblock %}

{% block head %}
    <script>
        (function($) {
            var accessToken = '{{ accessToken }}';
            jQuery(document).ready(function() {
                jQuery(opener.document).find('#configurationEntity_token').val(accessToken);
                window.close();
            });
        })(jQuery);
    </script>
{% endblock %}

{% block body %}
        <div class="col-lg-12">
            <header>
                <h1>Authorization successfull</h1>
            </header>

            <section>
                This window should close immediately.<br />
                If something goes wrong, here are your credentials:<br />
                <table class="table">
                    <thead>
                        <tr>
                            <th>Parameter</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Token (access token)</td>
                            <td>{{ accessToken }}</td>
                        </tr>
                    </tbody>
                </table>
            </section>
        </div>
{% endblock %}
